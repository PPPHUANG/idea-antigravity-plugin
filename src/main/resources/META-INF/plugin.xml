<idea-plugin>
    <id>com.example.antigravity</id>
    <name>Open in Antigravity</name>
    <vendor email="support@example.com" url="http://www.example.com">Antigravity</vendor>

    <description><![CDATA[
    Opens the current file and line in Antigravity.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Antigravity Notification Group"
                           displayType="BALLOON"/>
    </extensions>

    <actions>
        <action id="Antigravity.OpenIn" class="com.example.antigravity.OpenInAntigravityAction" text="Open in Antigravity" description="Opens current file in Antigravity">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift alt A"/>
        </action>
    </actions>
</idea-plugin>
